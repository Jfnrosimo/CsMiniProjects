<Window x:Class="ContextMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContextMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox 
            Height="200" 
            Name="myTextBox">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Bold" x:Name="miBold" IsCheckable="True" Checked="miBold_Checked" Unchecked="miBold_Unchecked" 
                              ></MenuItem>
                    <MenuItem Header="Italic" x:Name="miItalic" Click="miItalic_Click" ></MenuItem>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>
    </StackPanel>
</Window>
